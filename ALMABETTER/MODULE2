        "labels = ['India', 'Rest of the World']\n",
        "values = [india_total_shipments, total_shipments - india_total_shipments]\n",
        "\n",
        "# Create the bar chart\n",
        "plt.bar(labels, values, color=['blue', 'orange'])\n",
        "\n",
        "# Add labels and title\n",
        "plt.xlabel('Region')\n",
        "plt.ylabel('Total Shipments')\n",
        "plt.title('Total Shipments by Region')\n",
        "\n",
        "# Display the percentage of Indian shipments\n",
