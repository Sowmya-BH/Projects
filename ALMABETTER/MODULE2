      "cell_type": "code",
      "source": [
        "# Chart - 9  Using REGEX to segment the transactional data for shipments by Cipla, Mylan, or Aurobindo\n",
        "# Define a regular expression to match Cipla, Mylan, or Aurobindo\n",
        "cipla_regex = r\".*(Cipla).*\"\n",
        "mylan_regex = r\".*(Mylan).*\"\n",
        "aurobindo_regex = r\".*(Aurobindo).*\"\n",
        "\n",
        "\n",
        "\n",
        "# Create a new column with Boolean values indicating if the site is in India\n",
        "fed_df['cipla_shipment'] = fed_df['Manufacturing Site'].str.contains(cipla_regex, case=False, na=False)\n",
        "fed_df['mylan_shipment'] = fed_df['Manufacturing Site'].str.contains(mylan_regex, case=False, na=False)\n",
        "fed_df['aurobindo_shipment'] = fed_df['Manufacturing Site'].str.contains(aurobindo_regex, case=False, na=False)\n",
        "\n",
        "\n",
        "\n",
        "# Filter rows\n",
        "cipla_shipments = fed_df[fed_df['cipla_shipment']]\n",
        "mylan_shipment = fed_df[fed_df['mylan_shipment']]\n",
        "aurobindo_shipment = fed_df[fed_df['aurobindo_shipment']]\n",
        "# hetero_shipments['Total_items_shipped'].sum()\n",
        "\n",
        "\n",
        "# Calculate total shipments from India\n",
        "cipla_shipments = cipla_shipments['Total_items_shipped'].sum()\n",
        "mylan_shipment = mylan_shipment['Total_items_shipped'].sum()\n",
        "aurobindo_shipments = aurobindo_shipment['Total_items_shipped'].sum()\n",
        "\n",
        "\n",
        "# Calculate total shipments across all sites (assuming it's in the same DataFrame)\n",
        "total_shipments = fed_df['Total_items_shipped'].sum()\n",
        "\n",
        "# Calculate percentage of shipments from India\n",
        "cipla_percentage = (cipla_shipments / total_shipments) * 100\n",
        "mylan_percentage = (mylan_shipment / total_shipments) * 100\n",
        "aurobindo_percentage = (aurobindo_shipments / total_shipments) * 100\n",
        "print()\n",
        "print(f\"Total Shipments from cipla: {cipla_shipments:,}\")\n",
        "print(f\"Total Shipments from mylan: {mylan_shipment:,}\")\n",
        "print(f\"Total Shipments from aurobindo: {aurobindo_shipments:,}\")\n",
        "print()\n",
        "\n",
        "print(f\"Percentage of Shipments from cipla: {cipla_percentage:,}\")\n",
        "print(f\"Percentage of Shipments from mylan: {mylan_percentage:,}\")\n",
        "print(f\"Percentage of Shipments from aurobindo: {aurobindo_percentage:,}\")\n",
        "\n",
        "print(f\"Total Shipments: {total_shipments:,}\")\n"
      ],
      "metadata": {
        "id": "B2aS4O1ophqO"
      },
      "execution_count": null,
      "outputs": []
    },
