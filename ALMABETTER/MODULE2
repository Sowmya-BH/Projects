        "# Define a regular expression to match India, IN, or Nashik\n",
        "india_pattern = r\"(India|IN|Nashik)\"\n",
        "\n",
        "# Create a new column with Boolean values indicating if the site is in India\n",
        "fed_df['India_Site'] = fed_df['Manufacturing Site'].str.contains(india_pattern, case=False, na=False)\n",
        "\n",
        "# Filter rows with India sites\n",
        "india_df = fed_df[fed_df['India_Site']]\n",
        "#print(india_df)\n",
        "# Calculate total shipments from India\n",
        "india_total_shipments = india_df['Total_items_shipped'].sum()\n",
        "\n",
        "# Calculate total shipments across all sites (assuming it's in the same DataFrame)\n",
        "total_shipments = fed_df['Total_items_shipped'].sum()\n",
        "\n",
        "# Calculate percentage of shipments from India\n",
        "india_percentage = (india_total_shipments / total_shipments) * 100\n",
        "\n",
        "print(f\"Total Shipments from India: {india_total_shipments:,}\")\n",
        "print(f\"Total Shipments: {total_shipments:,}\")\n",
        "print(f\"Percentage of Shipments from India: {india_percentage:.2f}%\")\n"
      ],
      "metadata": {
        "id": "TdPTWpAVphqO"
      },
      "execution_count": null,
      "outputs": []
    },
