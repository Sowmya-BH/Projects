        "# Volume Demand and Market Concentration, Logistical Strategy (Shipment Mode Split)\n",
        "\n",
        "# 1. Calculate the COUNT (Size) of records for each group\n",
        "grouped_counts = fed_df.groupby(['Country', 'Sub Classification', 'Shipment Mode']).size().reset_index(name='Shipment_Count')\n",
        "\n",
        "\n",
        "# 2. Calculate the SUM of 'Total_items_shipped' for each group\n",
        "grouped_items_sum = fed_df.groupby(['Country', 'Sub Classification', 'Shipment Mode'])['Total_items_shipped'].sum().reset_index(name='Total_Items')\n",
        "\n",
        "\n",
        "# We can merge these two results into a single DataFrame for comprehensive analysis and plotting\n",
        "grouped_data = pd.merge(grouped_counts, grouped_items_sum,\n",
        "                       on=['Country', 'Sub Classification', 'Shipment Mode'])"
