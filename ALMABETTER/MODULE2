      "cell_type": "code",
      "source": [
        "# Sort the data\n",
        "Country_df_sorted = Country_df.sort_values('count', ascending=False)\n",
        "\n",
        "# 1. Bar Chart for Top 16 Countries\n",
        "plt.figure(figsize=(16, 8))\n",
        "top_16_countries = Country_df_sorted.head(16)\n",
        "\n",
        "bars = plt.bar(top_16_countries['Country'], top_16_countries['count'],\n",
        "               color=plt.cm.Set3(range(len(top_16_countries))))\n",
        "plt.title('Top 16 Countries by Shipment Count', fontsize=16, fontweight='bold')\n",
        "plt.xlabel('Country', fontsize=12)\n",
        "plt.ylabel('Number of Shipments', fontsize=12)\n",
        "plt.xticks(rotation=45, ha='right')\n",
        "\n",
        "# Add value labels on bars\n",
        "for bar in bars:\n",
        "    height = bar.get_height()\n",
        "    plt.text(bar.get_x() + bar.get_width()/2., height,\n",
        "             f'{int(height):,}',\n",
        "             ha='center', va='bottom', fontweight='bold')\n",
        "\n",
        "plt.tight_layout()\n",
        "plt.show()\n",
        "\n",
        "# 2. Pie Chart (Countries > 100 as individual, rest as \"Others\")\n",
        "significant_countries = Country_df_sorted[Country_df_sorted['count'] > 100]\n",
        "other_countries = Country_df_sorted[Country_df_sorted['count'] <= 100]\n",
        "\n",
        "other_total = other_countries['count'].sum()\n",
        "\n",
        "# Prepare data for pie chart\n",
        "labels = list(significant_countries['Country']) + ['Other Countries']\n",
        "sizes = list(significant_countries['count']) + [other_total]\n",
        "colors = plt.cm.Set3(range(len(labels)))\n",
        "\n",
        "plt.figure(figsize=(12, 10))\n",
        "wedges, texts, autotexts = plt.pie(sizes, labels=labels, colors=colors,\n",
        "                                    autopct='%1.1f%%', startangle=90)\n",
        "\n",
        "# Style the text\n",
        "for autotext in autotexts:\n",
        "    autotext.set_color('black')\n",
        "    autotext.set_fontweight('bold')\n",
        "\n",
        "plt.title('Shipment Distribution by Country\\n(Countries with >100 shipments shown individually)',\n",
        "          fontsize=16, fontweight='bold')\n",
        "plt.axis('equal')\n",
        "plt.show()\n",
        "\n",
        "print(f\"Number of countries with >100 shipments: {len(significant_countries)}\")\n",
        "print(f\"Number of countries grouped as 'Others': {len(other_countries)}\")\n",
        "print(f\"Total shipments in 'Others' category: {other_total}\")"
