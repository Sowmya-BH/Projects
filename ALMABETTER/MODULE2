    {
      "cell_type": "code",
      "source": [
        "# Correlation Heatmap visualization code\n",
        "# First, encode categorical variables\n",
        "from sklearn.preprocessing import LabelEncoder\n",
        "\n",
        "def encode_categorical(df):\n",
        "    df_encoded = df.copy()\n",
        "    le = LabelEncoder()\n",
        "\n",
        "    for column in df_encoded.select_dtypes(include=['object']).columns:\n",
        "        df_encoded[column] = le.fit_transform(df_encoded[column])\n",
        "\n",
        "    return df_encoded\n",
        "\n",
        "# Create correlation matrix of encoded categorical variables\n",
        "df_encoded = encode_categorical(categorical_cols)\n",
        "corr_matrix = df_encoded.corr()\n",
        "\n",
        "corr_matrix"
      ],
      "metadata": {
        "id": "xyC9zolEZNRQ",
        "collapsed": true
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "fed_df.columns"
      ],
      "metadata": {
        "collapsed": true,
        "id": "bQLDirGCgck-"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "plt.figure(figsize=(12, 20))\n",
        "sns.heatmap(corr_matrix,\n",
        "            annot=True,\n",
        "            cmap='coolwarm',\n",
        "            center=0,\n",
        "            fmt='.2f',\n",
        "            square=True)\n",
        "plt.title('Correlation Heatmap of Encoded Categorical Variables')\n",
        "plt.tight_layout()\n",
        "plt.show()"
      ],
      "metadata": {
        "id": "iShFMvAxCeBJ",
        "collapsed": true
      },
      "execution_count": null,
      "outputs": []
