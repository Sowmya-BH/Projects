        "# Creating new feature features to capture importance of special cases where measurements could either not be read , or were recorded separately\n",
        "\n",
        "# --- 1. For Shipment Weight (Weight (Kilograms)) ---\n",
        "\n",
        "# Initialize the column with the default case\n",
        "fed_df['Weight_special'] = 'Normal Measurement'\n",
        "\n",
        "# Convert the column to string to safely use .str methods\n",
        "temp_weight_col = fed_df['Weight (Kilograms)'].astype(str)\n",
        "\n",
        "# Case 1: Handle 'Weight Captured Separately'\n",
        "is_captured_separately = temp_weight_col.str.fullmatch('Weight Captured Separately', na=False)\n",
        "fed_df.loc[is_captured_separately, 'Weight_special'] = fed_df['Weight (Kilograms)']\n",
        "\n",
        "# Case 2: Handle \"See...\" tags\n",
        "# Check if the string starts with 'See' (after stripping whitespace)\n",
        "is_see_tag = temp_weight_col.str.strip().str.startswith('See', na=False)\n",
        "fed_df.loc[is_see_tag, 'Weight_special'] = \"See ASN/DN Tag\""
      ],
      "metadata": {
        "id": "g3OYMyZx4q7G"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Creating new feature features to capture importance of special cases where measurements could either not be read , or were recorded separately\n",
        "\n",
        "# --- 2. For PQ First Sent to Client Date ---\n",
        "\n",
        "# Initialize the column with the default case\n",
        "fed_df['PQ_date_sent'] = 'Date Captured'\n",
        "\n",
        "# Define the non-captured values\n",
        "pq_special_values = ['Pre-PQ Process', 'Date Not Captured']\n",
        "\n",
        "# Create a boolean mask for the special cases\n",
        "is_pq_special = fed_df['PQ First Sent to Client Date'].astype(str).isin(pq_special_values)\n",
        "\n",
        "# Apply the special values using boolean indexing\n",
        "fed_df.loc[is_pq_special, 'PQ_date_sent'] = fed_df['PQ First Sent to Client Date']\n"
      ],
      "metadata": {
        "id": "wukctDITFplj"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Creating new feature features to capture importance of special cases where measurements could either not be read , or were recorded separately\n",
        "\n",
        "# --- 3. For PO Sent to Vendor Date ---\n",
        "\n",
        "# Initialize the column with the default case\n",
        "fed_df['PO_date_sent'] = 'Date Captured'\n",
        "\n",
        "# Define the non-captured values\n",
        "po_special_values = ['N/A - From RDC', 'Date Not Captured']\n",
        "\n",
        "# Create a boolean mask for the special cases\n",
        "is_po_special = fed_df['PO Sent to Vendor Date'].astype(str).isin(po_special_values)\n",
        "\n",
        "# Apply the special values using boolean indexing\n",
        "fed_df.loc[is_po_special, 'PO_date_sent'] = fed_df['PO Sent to Vendor Date']\n",
        "\n",
        "print(\"All three blocks have been corrected and vectorized for efficiency.\")\n",
        "print(\"\\nNew columns created/updated:\")\n",
        "print(fed_df[['Weight_special', 'PQ_date_sent', 'PO_date_sent']].head())"
      ],
      "metadata": {
