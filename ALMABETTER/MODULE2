      "cell_type": "code",
      "source": [
        "# Create a list of labels and values\n",
        "labels = ['Aurobindo', 'Cipla', 'Mylan', 'Rest']\n",
        "values = [aurobindo_shipments, cipla_shipments, mylan_shipment, total_shipments - (cipla_shipments + mylan_shipment + aurobindo_shipments)]\n",
        "\n",
        "# Create the bar chart\n",
        "plt.bar(labels, values, color=['blue', 'orange', 'green', 'coral'])\n",
        "\n",
        "# Calculate and display percentages\n",
        "total = sum(values)\n",
        "for i, v in enumerate(values):\n",
        "    percentage = f'{(v / total) * 100:.1f}%'\n",
        "    plt.text(i, v, percentage,\n",
        "             ha='center',\n",
        "             va='bottom',\n",
        "             fontweight='bold')\n",
        "\n",
