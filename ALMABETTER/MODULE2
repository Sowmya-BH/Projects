        "# Create the grouped dataframe\n",
        "grouped_df = fed_df.groupby(['Sub Classification','Product Group','Shipment Mode']).size().reset_index()\n",
        "grouped_df.rename(columns={0: 'Count'}, inplace=True)\n",
        "\n",
        "# Create two subplots side by side\n",
        "fig, (ax1, ax2) = plt.subplots(1, 2, figsize=(16, 6))\n",
        "\n",
        "# Plot 1: ARV and HRDT\n",
        "arv_hrtd_df = grouped_df[grouped_df['Product Group'].isin(['ARV', 'HRDT'])]\n",
        "sns.barplot(x='Product Group', y='Count', hue='Shipment Mode', data=arv_hrtd_df, ax=ax1)\n",
        "ax1.set_title('Shipment Count - ARV & HRDT Product Groups')\n",
        "ax1.set_xlabel('Product Group')\n",
        "ax1.set_ylabel('Count')\n",
        "ax1.legend(title='Shipment Mode')\n",
        "\n",
        "# Plot 2: Remaining product groups (ACT, ANTM, MRDT)\n",
        "other_df = grouped_df[~grouped_df['Product Group'].isin(['ARV', 'HRDT'])]\n",
        "sns.barplot(x='Product Group', y='Count', hue='Shipment Mode', data=other_df, ax=ax2)\n",
        "ax2.set_title('Shipment Count - Other Product Groups')\n",
        "ax2.set_xlabel('Product Group')\n",
        "ax2.set_ylabel('Count')\n",
        "ax2.legend(title='Shipment Mode')\n",
        "\n",
        "# Adjust layout and show\n",
        "plt.tight_layout()\n",
        "plt.show()\n",
        "\n",
        "# Optional: Display the dataframes used for each plot\n",
        "print(\"ARV & HRDT Data:\")\n",
        "print(arv_hrtd_df)\n",
        "print(\"\\nOther Product Groups Data:\")\n",
