    {
      "cell_type": "code",
      "source": [
        "# 1. Calculate Total Shipments (Count of transactions) per Country\n",
        "total_country_shipments = fed_df.groupby('Country').size().reset_index(name='Total_Shipment_Count')\n",
        "\n",
        "# 2. Calculate Delayed Shipments per Country\n",
        "# Assuming 'delayed_delivery' > 0 indicates a delayed shipment\n",
        "delayed_shipments_df = fed_df[fed_df['delayed_delivery'] > 0]\n",
        "delayed_country_counts = delayed_shipments_df.groupby('Country').size().reset_index(name='Delayed_Shipment_Count')\n",
        "\n",
        "# 3. Merge the two DataFrames\n",
        "# This ensures we have both counts side-by-side for all countries\n",
        "delay_analysis_df = pd.merge(total_country_shipments, delayed_country_counts, on='Country', how='left')\n",
        "\n",
        "# Fill NaN values (countries with 0 delays) with 0\n",
        "delay_analysis_df['Delayed_Shipment_Count'] = delay_analysis_df['Delayed_Shipment_Count'].fillna(0)\n",
        "\n",
        "# 4. Calculate the Percentage Delayed\n",
        "delay_analysis_df['Percentage_Delayed'] = (\n",
        "    delay_analysis_df['Delayed_Shipment_Count'] / delay_analysis_df['Total_Shipment_Count']\n",
        ") * 100\n",
        "\n",
        "# 5. Display the final result sorted by the highest delay percentage\n",
        "percentage_delayed_countrywise = delay_analysis_df.sort_values(\n",
        "    'Percentage_Delayed', ascending=False\n",
        ")\n",
        "\n",
        "# Display the results\n",
        "(percentage_delayed_countrywise)"
      ],
      "metadata": {
        "id": "lqAIGUfyphqO",
        "collapsed": true
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Chart - 7: Shipment Delay Analysis by Country\n",
        "print(\"=\" * 60)\n",
        "print(\"SHIPMENT DELAY ANALYSIS BY COUNTRY\")\n",
        "print(\"=\" * 60)\n",
        "\n",
        "# CALCULATIONS\n",
        "print(\"\\n1. CALCULATING DELAY STATISTICS...\")\n",
        "\n",
        "# 1. Calculate Total Shipments per Country\n",
        "total_country_shipments = fed_df.groupby('Country').size().reset_index(name='Total_Shipments')\n",
        "print(f\"Total countries with shipments: {len(total_country_shipments)}\")\n",
        "\n",
        "# 2. Calculate Delayed Shipments per Country (delayed_delivery > 0 means actual delay)\n",
        "delayed_shipments_df = fed_df[fed_df['delayed_delivery'] > 0]\n",
        "delayed_country_counts = delayed_shipments_df.groupby('Country').size().reset_index(name='Delayed_Shipments')\n",
        "\n",
        "print(f\"Total delayed shipments: {delayed_shipments_df.shape[0]}\")\n",
        "print(f\"Countries with delayed shipments: {len(delayed_country_counts)}\")\n",
        "\n",
        "# 3. Merge the DataFrames\n",
        "delay_analysis_df = pd.merge(total_country_shipments, delayed_country_counts, on='Country', how='left')\n",
        "delay_analysis_df['Delayed_Shipments'] = delay_analysis_df['Delayed_Shipments'].fillna(0)\n",
        "\n",
        "# 4. Calculate Percentage Delayed\n",
        "delay_analysis_df['Percentage_Delayed'] = (\n",
        "    delay_analysis_df['Delayed_Shipments'] / delay_analysis_df['Total_Shipments']\n",
        ") * 100\n",
        "\n",
        "# 5. Calculate additional metrics\n",
        "delay_analysis_df['OnTime_Shipments'] = delay_analysis_df['Total_Shipments'] - delay_analysis_df['Delayed_Shipments']\n",
        "delay_analysis_df['OnTime_Percentage'] = 100 - delay_analysis_df['Percentage_Delayed']\n",
        "\n",
        "# Sort by highest delay percentage\n",
        "percentage_delayed_countrywise = delay_analysis_df.sort_values('Percentage_Delayed', ascending=False)\n",
        "\n",
        "# DISPLAY CALCULATION RESULTS\n",
        "print(\"\\n2. DELAY ANALYSIS RESULTS:\")\n",
        "print(\"-\" * 40)\n",
        "\n",
        "# Overall statistics\n",
        "total_shipments = delay_analysis_df['Total_Shipments'].sum()\n",
        "total_delayed = delay_analysis_df['Delayed_Shipments'].sum()\n",
        "overall_delay_percentage = (total_delayed / total_shipments) * 100\n",
        "\n",
        "print(f\"Overall Statistics:\")\n",
        "print(f\"  â€¢ Total Shipments: {total_shipments:,}\")\n",
        "print(f\"  â€¢ Delayed Shipments: {total_delayed:,}\")\n",
        "print(f\"  â€¢ Overall Delay Rate: {overall_delay_percentage:.2f}%\")\n",
        "print(f\"  â€¢ On-Time Rate: {100 - overall_delay_percentage:.2f}%\")\n",
        "\n",
        "# Top 5 countries with highest delay rates\n",
        "print(f\"\\nTop 5 Countries with Highest Delay Rates:\")\n",
        "print(\"Country\".ljust(25) + \"Total\".ljust(10) + \"Delayed\".ljust(10) + \"Delay %\".ljust(10))\n",
        "print(\"-\" * 55)\n",
        "for _, row in percentage_delayed_countrywise.head().iterrows():\n",
        "    print(f\"{row['Country'][:24].ljust(25)}{str(row['Total_Shipments']).ljust(10)}{str(int(row['Delayed_Shipments'])).ljust(10)}{row['Percentage_Delayed']:.1f}%\".ljust(10))\n",
        "\n",
        "# Countries with perfect on-time performance\n",
        "perfect_countries = delay_analysis_df[delay_analysis_df['Delayed_Shipments'] == 0]\n",
        "print(f\"\\nCountries with Perfect On-Time Performance ({len(perfect_countries)} countries):\")\n",
        "if len(perfect_countries) > 0:\n",
        "    print(\", \".join(perfect_countries['Country'].tolist()))\n",
        "\n",
        "# Countries with 100% delay rate (all shipments delayed)\n",
        "all_delayed_countries = delay_analysis_df[delay_analysis_df['Percentage_Delayed'] == 100]\n",
        "print(f\"\\nCountries with 100% Delay Rate ({len(all_delayed_countries)} countries):\")\n",
        "if len(all_delayed_countries) > 0:\n",
        "    for _, row in all_delayed_countries.iterrows():\n",
        "        print(f\"  â€¢ {row['Country']} ({row['Total_Shipments']} shipments)\")\n",
        "\n",
        "# VISUALIZATION\n",
        "print(\"\\n3. CREATING VISUALIZATION...\")\n",
        "\n",
        "# Filter countries with meaningful data (at least 5 shipments for better representation)\n",
        "min_shipments = 5\n",
        "filtered_df = percentage_delayed_countrywise[percentage_delayed_countrywise['Total_Shipments'] >= min_shipments]\n",
        "\n",
        "print(f\"Countries included in chart (â‰¥ {min_shipments} shipments): {len(filtered_df)}\")\n",
        "\n",
        "# Create visualization with two subplots\n",
        "fig, (ax1, ax2) = plt.subplots(1, 2, figsize=(18, 8))\n",
        "\n",
        "# Plot 1: Percentage Delayed (Bar Chart)\n",
        "colors = ['red' if x > filtered_df['Percentage_Delayed'].mean() else 'blue' for x in filtered_df['Percentage_Delayed']]\n",
        "bars1 = ax1.bar(filtered_df['Country'], filtered_df['Percentage_Delayed'], color=colors, alpha=0.7, edgecolor='black')\n",
        "\n",
        "ax1.set_title('Percentage of Delayed Shipments by Country\\n(Red bars above average)', fontsize=14, fontweight='bold')\n",
        "ax1.set_xlabel('Country', fontsize=12)\n",
        "ax1.set_ylabel('Percentage of Shipments Delayed (%)', fontsize=12)\n",
        "ax1.tick_params(axis='x', rotation=45, labelsize=9)\n",
        "ax1.grid(axis='y', alpha=0.3)\n",
        "\n",
        "# Add value labels on bars\n",
        "for bar, percentage in zip(bars1, filtered_df['Percentage_Delayed']):\n",
        "    height = bar.get_height()\n",
        "    ax1.text(bar.get_x() + bar.get_width()/2, height + 0.5, f'{percentage:.1f}%',\n",
        "             ha='center', va='bottom', fontsize=8, fontweight='bold')\n",
        "\n",
        "# Add average line\n",
        "avg_delay = filtered_df['Percentage_Delayed'].mean()\n",
        "ax1.axhline(y=avg_delay, color='red', linestyle='--', linewidth=2, alpha=0.8, label=f'Average: {avg_delay:.1f}%')\n",
        "ax1.legend()\n",
        "\n",
        "# Plot 2: Total vs Delayed Shipments (Stacked Bar Chart)\n",
        "countries = filtered_df['Country']\n",
        "total_counts = filtered_df['Total_Shipments']\n",
        "delayed_counts = filtered_df['Delayed_Shipments']\n",
        "on_time_counts = filtered_df['OnTime_Shipments']\n",
        "\n",
        "bars2a = ax2.bar(countries, on_time_counts, label='On-Time Shipments', color='green', alpha=0.7, edgecolor='black')\n",
        "bars2b = ax2.bar(countries, delayed_counts, bottom=on_time_counts, label='Delayed Shipments', color='red', alpha=0.7, edgecolor='black')\n",
        "\n",
        "ax2.set_title('Total vs Delayed Shipments by Country', fontsize=14, fontweight='bold')\n",
        "ax2.set_xlabel('Country', fontsize=12)\n",
        "ax2.set_ylabel('Number of Shipments', fontsize=12)\n",
        "ax2.tick_params(axis='x', rotation=45, labelsize=9)\n",
        "ax2.legend()\n",
        "ax2.grid(axis='y', alpha=0.3)\n",
        "\n",
        "# Add total count labels on top of stacked bars\n",
        "for i, (total, delayed) in enumerate(zip(total_counts, delayed_counts)):\n",
        "    ax2.text(i, total + max(total_counts)*0.01, f'{int(total)}',\n",
        "             ha='center', va='bottom', fontsize=8, fontweight='bold')\n",
        "\n",
        "plt.tight_layout()\n",
