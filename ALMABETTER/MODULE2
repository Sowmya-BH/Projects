    {
      "cell_type": "code",
      "source": [
        "# --- 1. Data Preparation and Type Conversion ---\n",
        "\n",
        "date_columns = ['PO Sent to Vendor Date', 'Scheduled Delivery Date',\n",
        "                'Delivered to Client Date', 'Delivery Recorded Date']\n",
        "\n",
        "for col in date_columns:\n",
        "    fed_df[col] = pd.to_datetime(fed_df[col], errors='coerce')\n",
        "\n",
        "if 'delayed_delivery' in fed_df.columns:\n",
        "    fed_df['delayed_delivery'] = fed_df['delayed_delivery'].astype(float)\n",
        "\n",
        "# --- 2. Create Time Series Analysis segregated by Product Group ---\n",
        "\n",
        "# Use 'Scheduled Delivery Date' to create the monthly period index\n",
        "fed_df['Month_Period'] = fed_df['Scheduled Delivery Date'].dt.to_period('M')\n",
        "\n",
        "# Group and aggregate metrics by BOTH Month and Product Group\n",
        "monthly_product_data = fed_df.groupby(['Month_Period', 'Product Group']).agg({\n",
        "    'Total_items_shipped': 'sum',\n",
        "    'delayed_delivery': 'sum',\n",
        "}).reset_index()\n",
        "\n",
        "# Convert the Period index back to a timestamp for plotting\n",
        "monthly_product_data['Month'] = monthly_product_data['Month_Period'].dt.to_timestamp()\n",
        "\n",
        "# --- 3. Separate Data into Two Groups ---\n",
        "groups_to_separate = ['ARV', 'HRDT']\n",
        "\n",
        "# Data for ARV and HRDT\n",
        "arv_hrdt_data = monthly_product_data[\n",
        "    monthly_product_data['Product Group'].isin(groups_to_separate)\n",
        "]\n",
        "\n",
        "# Data for all other product groups\n",
        "other_data = monthly_product_data[\n",
        "    ~monthly_product_data['Product Group'].isin(groups_to_separate)\n",
        "]\n",
        "# Filter for only the 'MRDT' product group\n",
        "mrdt_df = fed_df[fed_df['Product Group'] == 'MRDT'].copy()\n",
        "\n",
        "# Get unique product groups for coloring\n",
        "unique_arv_hrdt = arv_hrdt_data['Product Group'].unique()\n",
        "unique_others = other_data['Product Group'].unique()\n",
        "\n",
        "\n",
        "\n",
        "# Group and aggregate metrics by Month_Period for MRDT\n",
        "mrdt_monthly_data = mrdt_df.groupby('Month_Period').agg({\n",
        "    'Total_items_shipped': 'sum',\n",
        "    'delayed_delivery': 'sum',\n",
        "}).reset_index()\n",
        "\n",
        "# Convert the Period index back to a timestamp for plotting\n",
        "mrdt_monthly_data['Month'] = mrdt_monthly_data['Month_Period'].dt.to_timestamp()\n",
        "\n",
        "\n",
        "\n",
        "# Define color maps\n",
        "# Using Set1 for the two focused groups, and Accent for others.\n",
        "color_map_arv_hrdt = plt.cm.get_cmap('Set1', len(unique_arv_hrdt))\n",
        "color_map_others = plt.cm.get_cmap('Accent', len(unique_others))\n",
        "\n",
        "\n",
        "\n",
        "# --- 4. PLOTTING FUNCTION (Dual-Axis Chart) ---\n",
        "\n",
        "def plot_product_groups(data_df, unique_groups, color_map, title_suffix):\n",
        "\n",
        "    if data_df.empty:\n",
        "        print(f\"No data to plot for {title_suffix}.\")\n",
        "        return\n",
        "\n",
        "    fig, ax1 = plt.subplots(figsize=(16, 8))\n",
        "\n",
        "    # Primary Y-axis (Total Items Shipped) Setup\n",
        "    ax1.set_xlabel('Month')\n",
        "    ax1.set_ylabel('Total Items Shipped', color='tab:blue', fontsize=12)\n",
        "    ax1.tick_params(axis='y', labelcolor='tab:blue')\n",
        "    ax1.grid(True, alpha=0.3)\n",
        "\n",
        "    # Secondary Y-axis (Delayed Deliveries) Setup\n",
        "    ax2 = ax1.twinx()\n",
        "    ax2.set_ylabel('Delayed Deliveries', color='tab:red', fontsize=12)\n",
        "    ax2.tick_params(axis='y', labelcolor='tab:red')\n",
        "\n",
        "    lines1 = [] # For Items (on ax1)\n",
        "    lines2 = [] # For Delays (on ax2)\n",
        "\n",
        "    for i, group in enumerate(unique_groups):\n",
        "        group_data = data_df[data_df['Product Group'] == group]\n",
        "        color = color_map(i)\n",
        "\n",
        "        # Total Items Shipped (Line 1 - on ax1)\n",
        "        line1 = ax1.plot(\n",
        "            group_data['Month'],\n",
        "            group_data['Total_items_shipped'],\n",
        "            color=color,\n",
        "            linewidth=2,\n",
        "            marker='o',\n",
        "            markersize=4,\n",
        "            label=f'Items: {group}'\n",
        "        )\n",
        "        lines1.extend(line1)\n",
        "\n",
        "        # Delayed Deliveries (Line 2 - on ax2)\n",
        "        line2 = ax2.plot(\n",
        "            group_data['Month'],\n",
        "            group_data['delayed_delivery'],\n",
        "            color=color,\n",
        "            linewidth=1.5,\n",
        "            marker='x',\n",
        "            markersize=5,\n",
        "            linestyle='--',\n",
        "            label=f'Delays: {group}'\n",
        "        )\n",
        "        lines2.extend(line2)\n",
        "\n",
        "    # Combine legends from both axes\n",
        "    all_lines = lines1 + lines2\n",
        "    labels = [l.get_label() for l in all_lines]\n",
        "    ax1.legend(all_lines, labels, loc='upper left', ncol=2, fontsize='small')\n",
        "\n",
        "    # Finalize Plot\n",
        "    ax1.set_title(f'Shipping Trends by Product Group: {title_suffix}\\n(Indexed by Scheduled Delivery Date)',\n",
        "                  fontsize=16, fontweight='bold')\n",
        "    ax1.tick_params(axis='x', rotation=45)\n",
        "    plt.tight_layout()\n",
        "    plt.show()\n",
        "\n",
        "\n",
        "# --- 5. EXECUTE PLOTTING ---\n",
        "\n",
        "print(\"--- Plotting ARV and HRDT ---\")\n",
        "plot_product_groups(\n",
        "    arv_hrdt_data,\n",
        "    unique_arv_hrdt,\n",
        "    color_map_arv_hrdt,\n",
        "    \"ARV and HRDT\"\n",
        ")\n",
        "\n",
        "print(\"\\n--- Plotting Other Product Groups ---\")\n",
        "plot_product_groups(\n",
        "    other_data,\n",
        "    unique_others,\n",
        "    color_map_others,\n",
        "    \"Other Product Groups\"\n",
        ")"
      ],
      "metadata": {
        "id": "SOimNPrHPEgF",
        "collapsed": true
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# --- 1. Data Preparation and Type Conversion ---\n",
        "\n",
        "date_columns = ['PO Sent to Vendor Date', 'Scheduled Delivery Date',\n",
        "                'Delivered to Client Date', 'Delivery Recorded Date']\n",
        "\n",
        "for col in date_columns:\n",
        "    fed_df[col] = pd.to_datetime(fed_df[col], errors='coerce')\n",
        "\n",
        "if 'delayed_delivery' in fed_df.columns:\n",
        "    fed_df['delayed_delivery'] = fed_df['delayed_delivery'].astype(float)\n",
        "\n",
        "# --- 2. Filter, Aggregate, and Prepare Time Series for MRDT ---\n",
        "\n",
        "# Use 'Scheduled Delivery Date' to create the monthly period index\n",
        "fed_df['Month_Period'] = fed_df['Scheduled Delivery Date'].dt.to_period('M')\n",
        "\n",
        "# Filter for only the 'MRDT' product group\n",
        "mrdt_df = fed_df[fed_df['Product Group'] == 'MRDT'].copy()\n",
        "\n",
        "# Group and aggregate metrics by Month_Period for MRDT\n",
        "mrdt_monthly_data = mrdt_df.groupby('Month_Period').agg({\n",
        "    'Total_items_shipped': 'sum',\n",
        "    'delayed_delivery': 'sum',\n",
        "}).reset_index()\n",
        "\n",
        "# Convert the Period index back to a timestamp for plotting\n",
        "mrdt_monthly_data['Month'] = mrdt_monthly_data['Month_Period'].dt.to_timestamp()\n",
        "\n",
        "\n",
        "# --- 3. Visualization (Dual Y-Axis Line Chart for MRDT) ---\n",
        "\n",
        "if mrdt_monthly_data.empty:\n",
        "    print(\"ðŸš¨ ERROR: No data found for the 'MRDT' Product Group. Check the spelling or data range.\")\n",
        "else:\n",
        "    fig, ax1 = plt.subplots(figsize=(16, 8))\n",
        "\n",
        "    # Primary y-axis (Total Items Shipped)\n",
        "    color_items = 'tab:blue'\n",
        "    ax1.set_xlabel('Month')\n",
        "    ax1.set_ylabel('Total Items Shipped (MRDT)', color=color_items, fontsize=12)\n",
        "    line1 = ax1.plot(mrdt_monthly_data['Month'], mrdt_monthly_data['Total_items_shipped'],\n",
        "                    color=color_items, linewidth=2.5, marker='o', label='Total Items Shipped')\n",
        "    ax1.tick_params(axis='y', labelcolor=color_items)\n",
        "    ax1.grid(True, alpha=0.3)\n",
        "    ax1.tick_params(axis='x', rotation=45)\n",
        "\n",
        "    # Secondary y-axis (Delayed Deliveries)\n",
        "    ax2 = ax1.twinx()\n",
        "    color_delayed = 'tab:red'\n",
        "    ax2.set_ylabel('Delayed Deliveries (MRDT)', color=color_delayed, fontsize=12)\n",
        "    line2 = ax2.plot(mrdt_monthly_data['Month'], mrdt_monthly_data['delayed_delivery'],\n",
        "                    color=color_delayed, linewidth=2.5, marker='s', linestyle='--', label='Delayed Deliveries')\n",
        "    ax2.tick_params(axis='y', labelcolor=color_delayed)\n",
        "\n",
        "    # Add title and legend\n",
        "    plt.title('Time Series Analysis: Volume and Delays for MRDT Product Group',\n",
        "              fontsize=16, fontweight='bold')\n",
        "\n",
        "    # Combine legends from both axes\n",
        "    lines = line1 + line2\n",
        "    labels = [l.get_label() for l in lines]\n",
        "    ax1.legend(lines, labels, loc='upper left')\n",
        "\n",
        "    plt.tight_layout()\n",
        "    plt.show()"
      ],
      "metadata": {
        "id": "vnR3IjAySNpQ",
        "collapsed": true
